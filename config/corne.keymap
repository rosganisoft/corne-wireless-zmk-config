#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    chosen {
        zmk,status-screen = &oled_display;
    };
};

/ {
    behaviors {
        EscTab: EscTab {
            compatible = "zmk,behavior-tap-dance";
            label = "ESCTAB";
            #binding-cells = <0>;
            bindings = <&kp TAB>, <&kp ESC>;

            tapping-term-ms = <200>;
        };

        SingleQuote: SingleQuote {
            compatible = "zmk,behavior-tap-dance";
            label = "SINGLEQUOTE";
            #binding-cells = <0>;
            bindings = <&kp SINGLE_QUOTE>, <&kp DOUBLE_QUOTES>;

            tapping-term-ms = <180>;
        };
    };

    macros {
        Salam: Salam {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(A) &kp S &kp S &kp A &kp L &kp A &kp M &kp U &kp A &kp L &kp A &kp I &kp K &kp U &kp M &kp SPACE &kp W &kp R &kp SPACE &kp W &kp B>;
            label = "SALAM";
            wait-ms = <0>;
        };

        AlterJudul: AlterJudul {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(B) &kp U &kp A &kp T &kp SPACE &kp A &kp L &kp T &kp E &kp R &kp N &kp A &kp T &kp I &kp F &kp SPACE &kp J &kp U &kp D &kp U &kp L &kp SPACE &kp D &kp A &kp R &kp I &kp SPACE &kp T &kp U &kp L &kp I &kp S &kp A &kp N &kp SPACE &kp D &kp I &kp SPACE &kp A &kp T &kp A &kp S>;
            label = "ALTERJUDUL";
            tap-ms = <0>;
            wait-ms = <0>;
        };

        Inalilahi: Inalilahi {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(I) &kp N &kp N &kp A &kp L &kp I &kp L &kp L &kp A &kp H &kp I &kp SPACE &kp W &kp A &kp I &kp N &kp A &kp I &kp L &kp A &kp I &kp H &kp I &kp SPACE &kp R &kp O &kp J &kp I &kp U &kp N>;
            label = "INALILAHI";
            tap-ms = <0>;
            wait-ms = <0>;
        };

        Almdulilah: Almdulilah {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(A) &kp L &kp H &kp A &kp M &kp D &kp U &kp L &kp I &kp L &kp L &kp A &kp H &kp I &kp SPACE &kp R &kp A &kp B &kp B &kp I &kp L &kp SPACE &kp SQT &kp A &kp L &kp A &kp M &kp I &kp I &kp N>;
            label = "ALMDULILAH";
            tap-ms = <0>;
            wait-ms = <0>;
        };

        Walaikum: Walaikum {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(W) &kp A &kp SQT &kp A &kp L &kp A &kp I &kp K &kp U &kp M &kp U &kp S &kp S &kp A &kp L &kp A &kp A &kp M>;
            label = "WALAIKUM";
            tap-ms = <0>;
            wait-ms = <0>;
        };

        Aamiin: Aamiin {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(A) &kp A &kp M &kp I &kp I &kp N &kp SPACE &kp LS(Y) &kp A &kp SPACE &kp LS(R) &kp O &kp B &kp B &kp A &kp L &kp SPACE &kp LS(A) &kp L &kp A &kp M &kp I &kp I &kp N>;
            label = "AAMIIN";
            tap-ms = <0>;
            wait-ms = <0>;
        };

        Prompt: Prompt {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(B) &kp U &kp A &kp T &kp SPACE &kp T &kp U &kp L &kp I &kp S &kp A &kp N &kp SPACE &kp B &kp E &kp R &kp G &kp A &kp Y &kp A &kp SPACE &kp S &kp U &kp R &kp A &kp T &kp SPACE &kp K &kp A &kp B &kp A &kp R &kp SPACE &kp B &kp A &kp H &kp A &kp S &kp A &kp SPACE &kp LS(I) &kp N &kp D &kp O &kp N &kp E &kp S &kp I &kp A &kp COMMA &kp SPACE &kp D &kp A &kp T &kp A &kp SPACE &kp D &kp A &kp N &kp SPACE &kp I &kp N &kp F &kp O &kp R &kp M &kp A &kp S &kp I &kp SPACE &kp D &kp I &kp A &kp M &kp B &kp I &kp L &kp SPACE &kp D &kp A &kp R &kp I &kp SPACE &kp T &kp U &kp L &kp I &kp S &kp A &kp N &kp SPACE &kp B &kp E &kp R &kp I &kp K &kp U &kp T &kp SPACE &kp I &kp N &kp I &kp COLON>;
            label = "PROMPT";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp TAB          &kp Q  &kp W  &kp E                  &kp R  &kp T        &kp Y      &kp U  &kp I      &kp O    &kp P     &kp BSPC
&mt LSHIFT CAPS  &kp A  &kp S  &kp D                  &kp F  &kp G        &kp H      &kp J  &kp K      &kp L    &kp SEMI  &mt RCTRL RS(SQT)
&kp LCTRL        &kp Z  &kp X  &kp C                  &kp V  &kp B        &kp N      &kp M  &kp COMMA  &kp DOT  &kp FSLH  &mt RIGHT_CONTROL DELETE
                               &mt LEFT_ALT LEFT_GUI  &mo 2  &kp ENTER    &kp SPACE  &mo 1  &mo 3
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Lower";
            bindings = <
&kp ESCAPE  &Aamiin      &Walaikum   &trans    &trans  &AlterJudul    &trans   &kp INS         &kp UP_ARROW    &kp HOME   &kp PRINTSCREEN   &kp C_VOLUME_UP
&trans      &Salam       &trans      &trans    &trans  &trans         &trans   &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT  &kp SINGLE_QUOTE  &kp C_VOL_DN
&kp LSHFT   &Almdulilah  &Inalilahi  &trans    &trans  &Prompt        &trans   &trans          &trans          &kp END    &trans            &kp K_MUTE
                                     &kp LGUI  &trans  &kp SPACE      &kp RET  &trans          &tog 0
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&kp ESC  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3               &kp NUMBER_4  &kp N5       &kp NUMBER_6    &kp N7          &kp N8          &kp NUMBER_9     &kp NUMBER_0  &kp BSPC
&kp F1   &kp F2        &kp F3        &kp F4                     &kp F5        &kp F6       &msc SCRL_UP    &mkp MB1        &mmv MOVE_UP    &mkp MB2         &trans        &kp ENTER
&kp F7   &kp F8        &kp F9        &kp F10                    &kp F11       &kp F12      &msc SCRL_DOWN  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans        &kp DEL
                                     &mt LS(LEFT_ALT) LEFT_GUI  &tog 0        &kp SPACE    &kp SPACE       &soft_off       &kp BACKSPACE
            >;
        };

        layer_3 {
            bindings = <
&kp ESCAPE  &kp EXCLAMATION  &kp AT_SIGN  &kp HASH  &kp DOLLAR  &kp PERCENT    &kp CARET       &kp AMPERSAND  &kp ASTERISK      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp PAGE_UP
&trans      &trans           &trans       &trans    &trans      &trans         &kp MINUS       &kp EQUAL      &kp LEFT_BRACKET  &kp RIGHT_BRACKET     &kp BACKSLASH          &kp PAGE_DOWN
&trans      &trans           &trans       &trans    &trans      &trans         &kp UNDERSCORE  &kp PLUS       &kp LEFT_BRACE    &kp RIGHT_BRACE       &kp PIPE               &kp DEL
                                          &tog 4    &tog 2      &trans         &kp SPACE       &trans         &trans
            >;
        };

        layer_4 {
            bindings = <
&bt BT_CLR      &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &trans  &trans    &kp UP_ARROW    &trans           &trans     &trans
&bt BT_CLR_ALL  &kp A         &kp S         &kp D         &kp F         &kp G           &trans  &kp LEFT  &kp DOWN_ARROW  &kp RIGHT_ARROW  &trans     &trans
&kp LCTRL       &kp Z         &kp X         &kp C         &kp V         &kp B           &trans  &trans    &trans          &trans           &kp SLASH  &trans
                                            &to 0         &trans        &kp SPACE       &trans  &trans    &trans
            >;
        };
    };
};
